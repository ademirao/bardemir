<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->

    </style>

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="MainActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardHeaderText" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="NavigationItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="NavigationItemText" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="NavigationItemIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>

    <style name="LeftNavHeader"></style>

    <style name="Separator"></style>

    <style name="CardContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="CardBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="CommingSoon" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">30dp</item>
        <item name="android:textSize">30dp</item>
    </style>

    <style name="EventImage">
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="EventTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height"><wrap_content></wrap_content></item>
    </style>

    <style name="EventSubTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
